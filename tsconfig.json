{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "rootDir": "src",
      "outDir": "./",
      "typeRoots": [ "node_modules/@types" ]
    },

    "include": [
        "src/**/*.ts"
    ],

    "exclude": ["node_modules","bower_components","jspm_packages"]
}